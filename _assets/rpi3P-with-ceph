KERNEL_DEFCONFIG=bcmrpi3_defconfig
KERNEL_IMAGE=kernel8.img
KERNEL_BRANCH=rpi-4.14.y
KERNEL_OLDDEFCONFIG=true
KERNELSRC_USRCONFIG="templates/linux.config"
ENABLE_WIRELESS=false
ENABLE_BLUETOOTH=false
ENABLE_SSHD=true
