APT_INCLUDES="curl,gnupg2,software-properties-common"
RPI_MODEL=3P
RELEASE=buster
BUILD_KERNEL=true
SET_ARCH=64
KERNEL_ARCH=arm64
RELEASE_ARCH=arm64
CROSS_COMPILE=aarch64-linux-gnu-
